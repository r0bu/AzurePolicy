{
  "mode": "All",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Network/networkSecurityGroups"
        },
        {
          "field": "location",
          "equals": "uksouth"
        },
        {
          "not": {
            "anyOf": [
              {
                "field": "name",
                "like": "qq-h101-azr-nsg-*"
              },
              {
                "field": "name",
                "match": "qq-h101-azr-nsg???"
              }
            ]
          }
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  },
  "parameters": {}
}